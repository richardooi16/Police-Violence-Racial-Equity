{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 500,
  "title": "Death Arrests in the United States 2013-2019",
  "data": {
    "url": "https://raw.githubusercontent.com/richardooi16/Police-Violence-Racial-Equity/main/data/deaths_arrests.csv"
  },
  "transform": [
    {
      "lookup": "State",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/richardooi16/Police-Violence-Racial-Equity/main/js/states-10m.json",
          "format": {
            "type": "topojson",
            "feature": "states"
          }
        },
        "key": "State"
      },
      "as": "geo"
    }
  ],
  "projection": {
    "type": "albersUsa"
  },
  "mark": "geoshape",
  "encoding": {
    "shape": {"field": "geo", "type": "geojson"},
    "color": {
      "field": "Total",
      "type": "quantitative"
    }
  }
}