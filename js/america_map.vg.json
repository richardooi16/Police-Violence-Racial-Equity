{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 500,
  "title": "Death Arrests in the United States 2013-2019",
  "data": {
    "url": "https://raw.githubusercontent.com/richardooi16/Police-Violence-Racial-Equity/main/js/america.geo.json",
    "format": {"type": "topojson", "feature": "america.geo"}
  },
  "transform": [{
    "lookup": "id",
    "from": {
      "data": {
        "url": "https://raw.githubusercontent.com/richardooi16/Police-Violence-Racial-Equity/main/data/deaths_arrests.csv"
      },
      "key": "id",
      "fields": ["Black-White Dissimilarity Index (2010)"]
    }
  }],
  "projection": {
    "type": "albersUsa"
  },
  "mark": "geoshape",
  "encoding": {
    "color": {
      "field": "Black-White Dissimilarity Index (2010)",
      "type": "quantitative"
    }
  }
}